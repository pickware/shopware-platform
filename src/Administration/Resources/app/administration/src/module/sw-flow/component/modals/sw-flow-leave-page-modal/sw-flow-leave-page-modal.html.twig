{% block sw_flow_leave_page_modal %}
<sw-modal
    :title="$tc('sw-flow.leavePageModal.headline')"
    class="sw-flow-leave-page-modal"
    variant="small"
    @modal-close="onCancel"
>
    {% block sw_flow_leave_page_modal_content %}
    {{ $tc('sw-flow.leavePageModal.description') }}
    {% endblock %}

    <template #modal-footer>
        {% block sw_flow_leave_page_modal_actions %}
        {% block sw_flow_leave_page_modal_action_cancel %}
        <mt-button
            size="small"
            class="sw-flow-leave-page-modal__stay-on-page"
            @click="onCancel"
        >
            {{ $tc('global.default.cancel') }}
        </mt-button>
        {% endblock %}

        {% block sw_flow_leave_page_modal_action_confirm %}
        <mt-button
            variant="primary"
            size="small"
            class="sw-flow-leave-page-modal__leave-page"
            @click="onConfirm"
        >
            {{ $tc('sw-flow.leavePageModal.confirmButton') }}
        </mt-button>
        {% endblock %}
        {% endblock %}
    </template>
</sw-modal>
{% endblock %}
