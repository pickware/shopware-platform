{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2020", "DOM", "ES2023"],
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
    },
    "types": [
      "vite/client",
      "jest"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": false,
  },
  "include": [
    "build.ts",
    "./src/**/*",
    "./scripts/**/*",
    "./vite.config.mts",
    "./build/vite-plugins/**/*",
    "./build/plugins.vite.ts",
    "./test/**/*.d.ts"
  ],
  "exclude": ["node_modules"],
  "files": ["node_modules/jest-expect-message/types/index.d.ts"]
}
